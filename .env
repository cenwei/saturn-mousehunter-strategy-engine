# Strategy Engine Environment Configuration
# 策略引擎环境配置

# Database Configuration
STRATEGY_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/saturn_mousehunter

# Application Configuration
STRATEGY_ENVIRONMENT=development
STRATEGY_DEBUG=true
STRATEGY_HOST=0.0.0.0
STRATEGY_PORT=8002

# JWT Configuration (from auth service)
STRATEGY_JWT_SECRET_KEY=your-secret-key-here-change-in-production-very-important-long-secret
STRATEGY_JWT_ALGORITHM=HS256

# Logging Configuration
STRATEGY_LOG_LEVEL=INFO
STRATEGY_LOG_FORMAT=json

# CORS Configuration
STRATEGY_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://192.168.8.168:3000", "http://192.168.8.168:8080"]
STRATEGY_CORS_ALLOW_CREDENTIALS=true
STRATEGY_CORS_ALLOW_METHODS=["*"]
STRATEGY_CORS_ALLOW_HEADERS=["*"]

# Redis Configuration (optional)
# STRATEGY_REDIS_URL=redis://localhost:6379/0

# Business Configuration
STRATEGY_MAX_STRATEGIES_PER_USER=100
STRATEGY_MAX_SIGNALS_PER_STRATEGY=10000
STRATEGY_SIGNAL_EXPIRY_HOURS=24

# Backtest Configuration
STRATEGY_MAX_BACKTEST_DAYS=3650
STRATEGY_MAX_CONCURRENT_BACKTESTS=5

# Monitoring Configuration
STRATEGY_ENABLE_METRICS=true
STRATEGY_METRICS_PORT=9002

# Auth Service Configuration
AUTH_SERVICE_URL=http://192.168.8.168:8001