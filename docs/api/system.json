{
  "openapi": "3.1.0",
  "info": {
    "title": "System APIs",
    "description": "策略引擎系统接口",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["healthy"],
            "description": "健康状态"
          },
          "service": {
            "type": "string",
            "description": "服务名称",
            "example": "strategy-engine"
          },
          "version": {
            "type": "string",
            "description": "服务版本",
            "example": "1.0.0"
          },
          "environment": {
            "type": "string",
            "description": "运行环境",
            "example": "development"
          }
        }
      },
      "RootResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "服务名称",
            "example": "Saturn MouseHunter Strategy Engine"
          },
          "version": {
            "type": "string",
            "description": "服务版本",
            "example": "1.0.0"
          },
          "status": {
            "type": "string",
            "enum": ["running"],
            "description": "运行状态"
          }
        }
      }
    }
  },
  "paths": {
    "/health": {
      "get": {
        "tags": ["system"],
        "summary": "健康检查",
        "description": "检查策略引擎服务的健康状态",
        "responses": {
          "200": {
            "description": "服务正常",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/HealthResponse"},
                "example": {
                  "status": "healthy",
                  "service": "strategy-engine",
                  "version": "1.0.0",
                  "environment": "development"
                }
              }
            }
          },
          "503": {
            "description": "服务不可用",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string"},
                    "error": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "tags": ["system"],
        "summary": "根路径",
        "description": "获取策略引擎服务基本信息",
        "responses": {
          "200": {
            "description": "服务基本信息",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/RootResponse"},
                "example": {
                  "message": "Saturn MouseHunter Strategy Engine",
                  "version": "1.0.0",
                  "status": "running"
                }
              }
            }
          }
        }
      }
    }
  }
}